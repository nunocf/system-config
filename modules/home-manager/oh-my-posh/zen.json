#:schema https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json

{
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "final_space": true,
  "version": 2,
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "type": "prompt",
      "segments": [
        {
          "background": "transparent",
          "foreground": "p:waveAqua2",
          "style": "plain",
          "template": "{{ .Path }}",
          "type": "path",
          "properties": {
            "style": "full"
          }
        },
        {
          "background": "transparent",
          "foreground": "p:fujiGrey",
          "style": "plain",
          "template": " {{ .HEAD }}{{ if or (.Working.Changed) (.Staging.Changed) }}*{{ end }} <p:waveAqua2>{{ if gt .Behind 0 }}⇣{{ end }}{{ if gt .Ahead 0 }}⇡{{ end }}</>",
          "type": "git",
          "properties": {
            "branch_icon": "",
            "commit_icon": "@",
            "fetch_status": true
          }
        }
      ]
    },
    {
      "overflow": "hidden",
      "type": "rprompt",
      "segments": [
        {
          "background": "transparent",
          "foreground": "p:sakuraPink",
          "style": "plain",
          "template": "{{ div .Ms 1000 }}s",
          "type": "executiontime",
          "properties": {
            "threshold": 5000
          }
        }
      ]
    },
    {
      "alignment": "left",
      "newline": true,
      "type": "prompt",
      "segments": [
        {
          "background": "transparent",
          "foreground_templates": [
            "{{if gt .Code 0}}p:peachRed{{end}}",
            "{{if eq .Code 0}}p:springGreen{{end}}"
          ],
          "style": "plain",
          "template": "λ",
          "type": "text"
        }
      ]
    }
  ],
  "palette": {
    "fujiGrey": "#727169",
    "peachRed": "#FF5D62",
    "sakuraPink": "#D27E99",
    "springGreen": "#98BB6C",
    "waveAqua1": "#6A9589",
    "waveAqua2": "#7AA89F"
  },
  "secondary_prompt": {
    "background": "transparent",
    "foreground": "p:springGreen",
    "template": "❯❯ "
  },
  "transient_prompt": {
    "background": "transparent",
    "foreground_templates": [
      "{{if gt .Code 0}}p:peachRed{{end}}",
      "{{if eq .Code 0}}p:springGreen{{end}}"
    ],
    "template": "λ "
  }
}
